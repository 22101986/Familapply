{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{parent()}}
{% endblock %}

{% block javascripts %}
	{{parent()}}
{% endblock %}

{# ... #}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div style="height:150px;"></div>
	<div class="form-group d-flex justify-content-center">
		<form action="{{ path('login') }}" method="post">
			<label for="username" class="form-text">Nom:</label>
			<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/><br>

			<label for="password" class="form-text">Mots de passe:</label>
			<input type="password" class="form-control" id="password" name="_password"/><br>

			{# If you want to control the URL the user is redirected to on success
																																																																																																							        <input type="hidden" name="_target_path" value="/account"/> #}

			<button class="btn btn-dark opacity-50 w-100" type="submit">
				<strong>Se Connecter</strong>
			</button>

		</form>
	</div>
{% endblock %}
